install.packages("copula")
library(copula)

get_FGM_samples <- function(delta, n = 2000) {
  fgm_cop <- fgmCopula(param = delta, dim = 2)
  return(rCopula(n, fgm_cop))
}
# Plot for delta = -0.9
delta1 <- -0.9
uv1 <- get_FGM_samples(delta1, 2000)
plot(uv1[, 1], uv1[, 2], main = "", xlab = "u", ylab = "v", col = 6, pch = 16)
